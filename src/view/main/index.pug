extends ./../layout/main

block content
    div.col-xs-12.col-md-12
        h1 OI #{user.name} Express.js + Passport.js
    div(class="col-xs-12 col-md-12")
        if (user)
            a(href="/auth/logout") Logout
    div(class="col-xs-12 col-md-12")
        if (user)        
            h2 HOME
            a(href="/users") Lista
        else
            h2 Favor Logar em
            a(href="/auth") Click here